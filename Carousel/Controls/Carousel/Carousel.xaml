<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:Uno.Toolkit.UI">

  <!-- Carousel Theme Resources -->
  <x:Double x:Key="CarouselIndicatorSize">8</x:Double>
  <x:Double x:Key="CarouselIndicatorSpacing">8</x:Double>
  <Thickness x:Key="CarouselPadding">0</Thickness>
  <Thickness x:Key="CarouselBorderThickness">0</Thickness>

  <Style TargetType="local:Carousel">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="{StaticResource CarouselBorderThickness}" />
    <Setter Property="Padding" Value="{StaticResource CarouselPadding}" />
    <Setter Property="IsTabStop" Value="True" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="VerticalAlignment" Value="Stretch" />
    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    <Setter Property="VerticalContentAlignment" Value="Stretch" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:Carousel">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}"
                  CornerRadius="{TemplateBinding CornerRadius}">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>

              <!-- Content area with clipping -->
              <Grid x:Name="PART_ClipGrid"
                    Grid.Row="0">
                <local:CarouselPanel x:Name="PART_ItemsPanel"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch" />
              </Grid>

              <!-- Navigation buttons (overlaid on content) -->
              <Button x:Name="PART_PreviousButton"
                      Grid.Row="0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="8,0"
                      Opacity="0.7"
                      Padding="8"
                      MinWidth="40"
                      MinHeight="40"
                      CornerRadius="20"
                      Background="{ThemeResource CarouselNavButtonBackground}"
                      BorderThickness="0"
                      AutomationProperties.Name="Previous">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                          Glyph="&#xE76B;"
                          FontSize="16"
                          Foreground="{ThemeResource CarouselNavButtonForeground}" />
              </Button>

              <Button x:Name="PART_NextButton"
                      Grid.Row="0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Margin="8,0"
                      Opacity="0.7"
                      Padding="8"
                      MinWidth="40"
                      MinHeight="40"
                      CornerRadius="20"
                      Background="{ThemeResource CarouselNavButtonBackground}"
                      BorderThickness="0"
                      AutomationProperties.Name="Next">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                          Glyph="&#xE76C;"
                          FontSize="16"
                          Foreground="{ThemeResource CarouselNavButtonForeground}" />
              </Button>

              <!-- Indicator dots -->
              <local:CarouselIndicator x:Name="PART_IndicatorPanel"
                                       Grid.Row="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,12,0,8"
                                       Visibility="{TemplateBinding IndicatorVisibility}" />
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <SolidColorBrush x:Key="CarouselIndicatorActiveBrush" Color="#333333" />
      <SolidColorBrush x:Key="CarouselIndicatorInactiveBrush" Color="#99999999" />
      <SolidColorBrush x:Key="CarouselNavButtonBackground" Color="#40000000" />
      <SolidColorBrush x:Key="CarouselNavButtonForeground" Color="#FFFFFF" />
      <SolidColorBrush x:Key="CarouselNavButtonBackgroundPointerOver" Color="#60000000" />
    </ResourceDictionary>
    <ResourceDictionary x:Key="Default">
      <SolidColorBrush x:Key="CarouselIndicatorActiveBrush" Color="#FFFFFF" />
      <SolidColorBrush x:Key="CarouselIndicatorInactiveBrush" Color="#80FFFFFF" />
      <SolidColorBrush x:Key="CarouselNavButtonBackground" Color="#40000000" />
      <SolidColorBrush x:Key="CarouselNavButtonForeground" Color="#FFFFFF" />
      <SolidColorBrush x:Key="CarouselNavButtonBackgroundPointerOver" Color="#60000000" />
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
